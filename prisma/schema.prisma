// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum Role {
  ADMIN      // Zarządca DISHLY
  OWNER      // Właściciel sieci restauracji
  MANAGER    // Manager konkretnej lokalizacji
  WORKER     // Pracownik operacyjny
  CLIENT     // Klient końcowy
}

enum OrderStatus {
  PENDING       // Oczekujące – właśnie złożone
  ACCEPTED      // Przyjęte – restauracja potwierdziła
  PREPARING     // W przygotowaniu – kuchnia gotuje
  READY         // Gotowe – czeka na kuriera / odbiór
  IN_DELIVERY   // W dostawie – kurier w drodze
  DELIVERED     // Dostarczone
  CANCELLED     // Anulowane
}

enum OrderType {
  DELIVERY
  PICKUP
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum SubscriptionInterval {
  MONTHLY
  YEARLY
}

enum PageCategory {
  NAVIGATION    // O nas, Jak to działa, Kariera, Blog, Kontakt
  INFORMATION   // Regulamin, Polityka prywatności, Polityka cookies
}

enum RestaurantStatus {
  PENDING    // Oczekuje na akceptację admina
  APPROVED   // Zaakceptowana
  REJECTED   // Odrzucona
}

enum MealApprovalStatus {
  PENDING    // Oczekuje na zatwierdzenie przez właściciela
  APPROVED   // Zatwierdzony
  REJECTED   // Odrzucony
}

enum TagRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum TagType {
  CUISINE
  AMENITY
  DISH
  CATEGORY
}

// ============================================
// AUTENTYKACJA I ROLE
// ============================================

model User {
  id               String       @id @default(cuid())
  email            String       @unique
  passwordHash     String
  role             Role         @default(CLIENT)
  firstName        String?
  lastName         String?
  phone            String?
  isApproved       Boolean      @default(false) // Dla OWNER - wymaga akceptacji admina
  isActive         Boolean      @default(true)  // Ban/Deactivate użytkownika
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  // Relacje
  addresses        Address[]
  orders           Order[]
  ownedRestaurants Restaurant[] @relation("RestaurantOwner")
  workingAt        Location?    @relation("LocationWorker", fields: [locationId], references: [id])
  locationId       String?
  reviews          Review[]
  tagRequests      TagRequest[]
  createdMeals     Meal[]       @relation("MealCreator")
  approvedMeals    Meal[]       @relation("MealApprover")

  @@index([email])
  @@index([role])
}

// ============================================
// ADRESY
// ============================================

model Address {
  id          String   @id @default(cuid())
  userId      String
  street      String
  city        String
  postalCode  String
  country     String   @default("PL")
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())

  // Relacje
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders      Order[]

  @@index([userId])
}

// ============================================
// OPINIE / RECENZJE
// ============================================

model Review {
  id           String   @id @default(cuid())
  restaurantId String
  userId       String
  rating       Int      // 1-5
  content      String?  @db.Text
  isVisible    Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relacje
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
  @@index([userId])
  @@index([rating])
}

// ============================================
// SUBSKRYPCJE (SAAS LOGIC)
// ============================================

model SubscriptionPlan {
  id                String               @id @default(cuid())
  name              String               @unique
  description       String?
  price             Decimal              @db.Decimal(10, 2)
  currency          String               @default("PLN")
  interval          SubscriptionInterval @default(MONTHLY)
  maxMeals          Int                  @default(50)
  maxLocations      Int                  @default(1)
  maxStaffAccounts  Int                  @default(5)
  isActive          Boolean              @default(true)
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  // Relacje
  subscriptions     Subscription[]
}

model Subscription {
  id                String           @id @default(cuid())
  restaurantId      String
  planId            String
  startDate         DateTime         @default(now())
  endDate           DateTime?
  isActive          Boolean          @default(true)
  stripeSubscriptionId String?       @unique
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  // Relacje
  restaurant        Restaurant       @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  plan              SubscriptionPlan @relation(fields: [planId], references: [id])

  @@index([restaurantId])
  @@index([planId])
}

// ============================================
// STRUKTURA BIZNESOWA
// ============================================

model Restaurant {
  id            String             @id @default(cuid())
  name          String
  slug          String             @unique
  logoUrl       String?
  coverImageUrl String?            // Zdjęcie główne (cover)
  bio           String?            @db.Text
  nip           String?            // NIP firmy
  ownerId       String
  status        RestaurantStatus   @default(PENDING)
  rejectionNote String?            @db.Text
  isActive      Boolean            @default(true)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  // Relacje
  owner              User               @relation("RestaurantOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  locations          Location[]
  meals              Meal[]
  subscriptions      Subscription[]
  reviews            Review[]
  cuisineTypes       CuisineType[]      @relation("RestaurantCuisines")
  tags               RestaurantTag[]    @relation("RestaurantAmenities")
  visibilitySettings VisibilitySettings[]

  @@index([ownerId])
  @@index([slug])
  @@index([status])
}

model Location {
  id              String    @id @default(cuid())
  restaurantId    String
  name            String
  address         String
  city            String
  postalCode      String    @default("")
  phone           String
  deliveryRadius  Int       @default(5) // w km
  deliveryFee     Decimal   @db.Decimal(10, 2)
  minOrderValue   Decimal   @db.Decimal(10, 2)
  openingHours    Json      // { "monday": { "open": "10:00", "close": "22:00", "closed": false }, ... }
  isAllDay        Boolean   @default(false) // Sprzedaż całodobowa
  latitude        Float?    // Szerokość geograficzna
  longitude       Float?    // Długość geograficzna
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relacje
  restaurant      Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  workers         User[]     @relation("LocationWorker")
  mealLocations   MealLocation[]
  orders          Order[]

  @@index([restaurantId])
  @@index([city])
}

// ============================================
// KATALOG MENU
// ============================================

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  imageUrl    String?
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacje
  meals       Meal[]

  @@index([slug])
}

model Meal {
  id              String              @id @default(cuid())
  restaurantId    String              // Globalne danie dla całej sieci restauracji
  categoryId      String
  name            String
  slug            String
  description     String?             @db.Text
  imageUrl        String?
  basePrice       Decimal             @db.Decimal(10, 2)
  preparationTime Int                 // w minutach
  weight          Int?                // Gramatura w gramach
  calories        Int?                // Łączna ilość kalorii [kcal]
  protein         Decimal?            @db.Decimal(5, 2) // Białko na 100g
  carbs           Decimal?            @db.Decimal(5, 2) // Węglowodany na 100g
  fat             Decimal?            @db.Decimal(5, 2) // Tłuszcze na 100g
  spiceLevel      Int                 @default(0) // 0-9
  isAvailable     Boolean             @default(true)
  isVegetarian    Boolean             @default(false)
  isVegan         Boolean             @default(false)
  isGlutenFree    Boolean             @default(false)
  
  // Pola zatwierdzania (dla Menadżerów)
  approvalStatus  MealApprovalStatus  @default(APPROVED) // OWNER zawsze APPROVED, MANAGER PENDING
  createdBy       String?             // ID użytkownika który utworzył
  createdByRole   Role?               // Rola twórcy (OWNER/MANAGER)
  approvedBy      String?             // ID właściciela który zatwierdził
  approvedAt      DateTime?           // Data zatwierdzenia
  rejectionNote   String?             @db.Text // Powód odrzucenia
  
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  // Relacje
  restaurant      Restaurant          @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  category        Category            @relation(fields: [categoryId], references: [id])
  variants        MealVariant[]
  addons          MealAddon[]
  locations       MealLocation[]
  orderItems      OrderItem[]
  creator         User?               @relation("MealCreator", fields: [createdBy], references: [id], onDelete: SetNull)
  approver        User?               @relation("MealApprover", fields: [approvedBy], references: [id], onDelete: SetNull)

  @@unique([restaurantId, slug])
  @@index([restaurantId])
  @@index([categoryId])
  @@index([isAvailable])
}

// Tabela łącznikowa dla przypisania posiłków do lokalizacji
model MealLocation {
  id          String   @id @default(cuid())
  mealId      String
  locationId  String
  isAvailable Boolean  @default(true) // Dostępność w danej lokalizacji
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacje
  meal        Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)
  location    Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@unique([mealId, locationId])
  @@index([mealId])
  @@index([locationId])
}

model MealVariant {
  id            String      @id @default(cuid())
  mealId        String
  name          String      // np. "Średnia", "Duża", "Rodzinna"
  priceModifier Decimal     @db.Decimal(10, 2) // np. +10.00 dla większego rozmiaru
  isAvailable   Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relacje
  meal          Meal        @relation(fields: [mealId], references: [id], onDelete: Cascade)
  orderItems    OrderItem[]

  @@index([mealId])
}

model MealAddon {
  id          String            @id @default(cuid())
  mealId      String
  name        String
  price       Decimal           @db.Decimal(10, 2)
  isRequired  Boolean           @default(false) // Czy klient musi wybrać
  maxQuantity Int               @default(1)     // Max ilość do wyboru
  isAvailable Boolean           @default(true)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relacje
  meal        Meal              @relation(fields: [mealId], references: [id], onDelete: Cascade)
  orderItems  OrderItemAddon[]

  @@index([mealId])
}

// ============================================
// ZAMÓWIENIA
// ============================================

model Order {
  id              String        @id @default(cuid())
  orderNumber     String        @unique
  userId          String?
  locationId      String
  addressId       String?
  type            OrderType     @default(DELIVERY)
  status          OrderStatus   @default(PENDING)
  paymentStatus   PaymentStatus @default(PENDING)
  subtotal        Decimal       @db.Decimal(10, 2)
  deliveryFee     Decimal       @db.Decimal(10, 2) @default(0)
  discountPercent Int           @default(0)
  totalPrice      Decimal       @db.Decimal(10, 2)
  notes           String?       @db.Text
  estimatedTime   Int?          // w minutach
  estimatedDeliveryAt DateTime? // szacowany czas dostawy
  stripePaymentId String?       @unique

  // Dane gościa (niezalogowany użytkownik)
  guestName       String?
  guestEmail      String?
  guestPhone      String?
  deliveryAddress String?       @db.Text // Adres dostawy tekstowo

  // Koordynaty do mapy śledzenia
  customerLat     Float?
  customerLng     Float?

  // Nazwa restauracji (snapshot)
  restaurantName  String?
  restaurantSlug  String?

  // Status history
  acceptedAt      DateTime?
  preparingAt     DateTime?
  readyAt         DateTime?
  inDeliveryAt    DateTime?
  deliveredAt     DateTime?
  cancelledAt     DateTime?

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relacje
  user            User?         @relation(fields: [userId], references: [id])
  location        Location      @relation(fields: [locationId], references: [id])
  address         Address?      @relation(fields: [addressId], references: [id])
  items           OrderItem[]

  @@index([userId])
  @@index([locationId])
  @@index([status])
  @@index([createdAt])
  @@index([orderNumber])
}

model OrderItem {
  id        String             @id @default(cuid())
  orderId   String
  mealId    String
  variantId String?
  quantity  Int                @default(1)
  basePrice Decimal            @db.Decimal(10, 2)
  totalPrice Decimal           @db.Decimal(10, 2)
  note      String?            @db.Text // Uwagi dla szefa kuchni
  mealName  String?            // Snapshot nazwy dania
  createdAt DateTime           @default(now())

  // Relacje
  order     Order              @relation(fields: [orderId], references: [id], onDelete: Cascade)
  meal      Meal               @relation(fields: [mealId], references: [id])
  variant   MealVariant?       @relation(fields: [variantId], references: [id])
  addons    OrderItemAddon[]

  @@index([orderId])
}

model OrderItemAddon {
  id          String     @id @default(cuid())
  orderItemId String
  addonId     String
  quantity    Int        @default(1)
  price       Decimal    @db.Decimal(10, 2)
  createdAt   DateTime   @default(now())

  // Relacje
  orderItem   OrderItem  @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  addon       MealAddon  @relation(fields: [addonId], references: [id])

  @@index([orderItemId])
}

// ============================================
// GLOBALNE SŁOWNIKI
// ============================================

model CuisineType {
  id          String       @id @default(cuid())
  name        String       @unique
  slug        String       @unique
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relacje
  restaurants Restaurant[] @relation("RestaurantCuisines")

  @@index([slug])
}

model RestaurantTag {
  id          String       @id @default(cuid())
  name        String       @unique
  slug        String       @unique
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relacje
  restaurants Restaurant[] @relation("RestaurantAmenities")

  @@index([slug])
}

model DishTag {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}

model TagRequest {
  id          String           @id @default(cuid())
  name        String
  type        TagType
  requestedBy String
  status      TagRequestStatus @default(PENDING)
  adminNote   String?          @db.Text
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relacje
  requester   User             @relation(fields: [requestedBy], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([type])
}

// ============================================
// ZARZĄDZANIE WIDOCZNOŚCIĄ UI (Owner)
// ============================================

// Klucze paneli UI dostępnych do kontroli widoczności:
// "statistics"   - Karta Statystyk
// "revenue"      - Strona Główna z Przychodem
// "reports"      - Raporty
// "staff"        - Zarządzanie Personelem
// "menu"         - Zarządzanie Menu
// "orders"       - Zamówienia
model VisibilitySettings {
  id           String   @id @default(cuid())
  restaurantId String
  role         Role     // MANAGER lub WORKER
  panelKey     String   // np. "statistics", "revenue", "reports"
  isVisible    Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relacje
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([restaurantId, role, panelKey])
  @@index([restaurantId])
}

// ============================================
// ZARZĄDZANIE TREŚCIĄ
// ============================================

model Page {
  id              String       @id @default(cuid())
  title           String
  slug            String       @unique
  category        PageCategory
  content         String       @db.Text
  metaDescription String?
  isPublished     Boolean      @default(false)
  showInHeader    Boolean      @default(false)  // Wyświetl w nagłówku
  showInFooter    Boolean      @default(false)  // Wyświetl w stopce
  sortOrder       Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([slug])
  @@index([category])
  @@index([isPublished])
}
